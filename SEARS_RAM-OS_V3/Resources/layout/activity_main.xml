<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <View
        android:id="@+id/topview"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/redgradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:layout_marginEnd="144dp"
        app:layout_constraintBottom_toBottomOf="@+id/topview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/btnmenuInicio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.807"
        app:srcCompat="@drawable/searslogowhitevdos" />

    <ImageButton
        android:id="@+id/btnmenuInicio"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/menulineswhite"
        app:layout_constraintBottom_toBottomOf="@+id/topview"
        app:layout_constraintEnd_toEndOf="@+id/topview"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.772" />

    <ScrollView
        android:id="@+id/scrollviewmain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:orientation="vertical"
            android:paddingBottom="110dp">

            <ImageView
                android:id="@+id/imageninicio"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/inicio_uno" />

            <TextView
                android:id="@+id/textview_depatech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disfruta lo último en tecnología"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:textSize="18sp" />

            <TableLayout
                android:id="@+id/tabletecnologia"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/tblitem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imagebuttonItem1"
                        android:layout_width="50dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/prd_laptopasus"/>

                    <ImageButton
                        android:id="@+id/imagebuttonItem2"
                        android:layout_width="50dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/prd_pantallaseiscincosamsung" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtitem1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:inputType="textMultiLine"
                        android:text="Laptop Asus 15.6&quot; X512Ja Ci5 10Th 12G 1Tb+ 256Ssd Plata"
                        android:textAlignment="textStart"/>

                    <TextView
                        android:id="@+id/txtitem2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:inputType="textMultiLine"
                        android:text="Pantalla 65&quot; Crystal Uhd 4K Un65Tu7000Fxzx Samsung"
                        android:textAlignment="textStart"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="36dp">

                    <ImageButton
                        android:id="@+id/imagebuttonItem3"
                        android:layout_width="50dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/prd_playstationcinco" />

                    <ImageButton
                        android:id="@+id/imagebuttonItem4"
                        android:layout_width="50dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/prd_sdosuno" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtitem3"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:text="Consola PlayStation 5"
                        android:textAlignment="textStart"
                        android:inputType="textMultiLine"/>

                    <TextView
                        android:id="@+id/txtitem4"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="25dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:layout_weight="1"
                        android:text="Celular Samsung S21 G991 128Gb Color Gris R9 (Telcel)"
                        android:textAlignment="textStart"/>
                </TableRow>
            </TableLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/inicio_cuatro"  />


            <TextView
                android:id="@+id/textview_depadama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para ella"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:textSize="20sp" />

            <TableLayout
                android:id="@+id/tabledama"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp">

                <TableRow
                    android:id="@+id/tblitemdama1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imagebuttonItem5"
                        android:layout_width="50dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/prd_vestidoflores" />

                    <ImageButton
                        android:id="@+id/imagebuttonItem6"
                        android:layout_width="50dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/prd_casiovintagerosa"/>

                </TableRow>

                <TableRow
                    android:id="@+id/tblitemdama2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtitemdama1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:inputType="textMultiLine"
                        android:text="Vestido de Flores con Vivos C2C"
                        android:textAlignment="textStart"/>

                    <TextView
                        android:id="@+id/txtitemdama2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:inputType="textMultiLine"
                        android:text="Reloj Vintage Rosa B650Wc-5Avt Unisex Casio"
                        android:textAlignment="textStart"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tblitemdama3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imagebuttonItem7"
                        android:layout_width="50dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/prd_bolsatotewesties" />

                    <ImageButton
                        android:id="@+id/imagebuttonItem8"
                        android:layout_width="50dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/prd_playerapolodama"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tblitemdama4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtitemdama3"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:text="Bolsa Tote con Gráfico Westies"
                        android:textAlignment="textStart"
                        android:inputType="textMultiLine"/>

                    <TextView
                        android:id="@+id/txtitemdama4"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="25dp"
                        android:paddingRight="20dp"
                        android:layout_weight="1"
                        android:text="Playera Tipo Polo Polo Club para Dama"
                        android:textAlignment="textStart"/>
                </TableRow>
            </TableLayout>
            <ImageView
                android:id="@+id/imageniniciofinal"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingTop="10dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/inicio_dos" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
